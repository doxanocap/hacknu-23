generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
  
model Margin {
  id         Int @id @default(autoincrement())
  barcode    Int @unique
  quantity   Int
  revenue    Int
  net_profit Int

  @@index([barcode])
}

model Supply {
  id       Int      @id @default(autoincrement())
  barcode  Int
  quantity Int
  price    Int
  time     DateTime

  @@index([barcode, time], type: BTree)
}

model Sale {
  id       Int      @id @default(autoincrement())
  barcode  Int
  quantity Int
  price    Int
  time     DateTime

  @@index([barcode, time], type: BTree)
}
